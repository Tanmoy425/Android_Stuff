<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Places"
    android:background="@drawable/bg2"
    android:id="@+id/places_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/castle_park"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#72c926"
            android:backgroundTintMode="src_over"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="605dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Castle Park"
                    android:textColor="#09005e"
                    android:textSize="35sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginStart="150dp"

                    android:src="@drawable/castle" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/zoo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#492999"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTintMode="src_over"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/zoo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="Colchester Zoo"
                    android:textColor="#09005e"
                    android:textSize="35sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/park"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#72c926"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTintMode="src_over"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left|center"
                android:text="Wivenhoe Trail"
                android:textColor="#09005e"
                android:textSize="35sp"
                android:layout_marginStart="50dp"
                android:textStyle="bold|italic" />

            <ImageView
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:src="@drawable/trail"
                android:layout_marginStart="120dp"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/art"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#492999"
            android:backgroundTintMode="src_over"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/firstsite" />

                <TextView
                    android:id="@+id/wivenhoe_park"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="Firstsite"
                    android:textColor="#09005e"
                    android:textSize="35sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ruins"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#72c926"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTintMode="src_over"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lake"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:text="St Botolph's Priory"
                    android:layout_marginStart="50dp"
                    android:textColor="#09005e"
                    android:textSize="35sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/priory"
                    android:layout_marginStart="100dp"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/park2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#492999"
            android:backgroundTintMode="src_over"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/country_park" />

                <TextView
                    android:id="@+id/something"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_marginStart="50dp"
                    android:text="Highwoods Country Park"
                    android:textColor="#09005e"
                    android:textSize="35sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </FrameLayout>

