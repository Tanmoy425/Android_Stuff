<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_info"
            android:text="COLCHESTER: BRITAIN'S OLDEST RECORDED TOWN"
            android:textColor="#0515f5"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />

        <ViewFlipper
            android:id="@+id/img_flipper"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:flipInterval="3000"
            android:autoStart="true"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/castle_park2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/country_park"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img6"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/church_street_tavern"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img7"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/wivenhoe1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img8"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/zoo"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img9"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/trail"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img10"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/colchester_united"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

        </ViewFlipper>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="@string/colchester"
            android:textSize="25sp"
            android:textColor="#f7f714" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#f7f714"
            android:text="@string/colchester_line"/>

    </LinearLayout>


</ScrollView>